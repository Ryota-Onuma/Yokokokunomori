<head>
  <%= stylesheet_link_tag "lectures/lecture_new", :media => "all" %>
</head>

<section id="lecture-post">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-2 lecture-post-container" >
        <h3 style="text-align:center; margin-bottom:20px;font-weight:bold;">新規授業登録</h3>
        <%= form_for @lecture do |f| %>
        <%= f.text_field :name, size:30, placeholder:"授業名",class:"lecture-name"%>
          <%= f.select :department,[
            ["開講学部を選んでください。","#"],
            ["一般教養科目","一般教養科目"],
            ["経済学部","経済学部"],
            ["経営学部","経営学部"],
            ["教育学部 : 学校教育課程","教育学部 ： 学校教育課程"],
            ["都市科学部 : 都市社会共生学科","都市科学部 : 都市社会共生学科"],
            ["都市科学部 : 建築学科","都市科学部 ： 建築学科"],
            ["都市科学部 : 都市基盤学科","都市科学部 ： 都市基盤学科"],
            ["都市科学部 : 環境リスク共生学科","都市科学部 : 環境リスク共生学科"],
            ["理工学部 : 機械・材料・海洋系学科 : 機械工学ＥＰ","理工学部 : 機械・材料・海洋系学科 : 機械工学ＥＰ"],
            ["理工学部 : 機械・材料・海洋系学科 : 材料工学ＥＰ","理工学部 : 機械・材料・海洋系学科 : 材料工学ＥＰ"],
            ["理工学部 : 機械・材料・海洋系学科 : 海洋空間のシステムデザインＥＰ","理工学部 : 機械・材料・海洋系学科 : 海洋空間のシステムデザインＥＰ"],
            ["理工学部 : 化学・生命系学科 : 化学EP","理工学部 : 化学・生命系学科 : 化学EP"],
            ["理工学部 : 化学・生命系学科 : 化学応用EP","理工学部 : 化学・生命系学科 : 化学応用EP"],
            ["理工学部 : 化学・生命系学科 : バイオEP","理工学部 : 化学・生命系学科 : バイオEP"],
            ["理工学部 : 数物・電子情報系学科 : 数理科学ＥＰ","理工学部 : 数物・電子情報系学科 : 数理科学ＥＰ"],
            ["理工学部 : 数物・電子情報系学科 : 物理工学ＥＰ","理工学部 : 数物・電子情報系学科 : 物理工学ＥＰ"],
            ["理工学部 : 数物・電子情報系学科 : 電子情報システムＥＰ","理工学部 : 数物・電子情報系学科 : 電子情報システムＥＰ"],
            ["理工学部 : 数物・電子情報系学科 : 情報工学ＥＰ","理工学部 : 数物・電子情報系学科 : 情報工学ＥＰ"],
            ["その他","その他"]
            ] ,class:"lecture-department"%>
            <h4 style="text-align:center;margin-top:30px;">使用言語</h4>
            <div class="selectlang">
              <%=f.radio_button :langage, "日本語", id:"japanese"%>
              <label for="japanese" id="japaneselabel">日本語</label>
              <%=f.radio_button :langage, "英語", id:"english"%>
              <span><label for="english" id="englishlabel">&ensp;英語&ensp;</label></span>
            </div>
            <h4 style="text-align:center;margin-top:30px;">成績評価の方法</h4>
            <div class="howtoassess">
              <div class="attend-section">
                <h4><span>出席</span></h4>
                <%= f.select :attendance,[
                    ["０％",0],
                    ["５％",5],
                    ["１０％",10],
                    ["２０％",20],
                    ["２５％",25],
                    ["３０％",30],
                    ["４０％",40],
                    ["５０％",50],
                    ["６０％",60],
                    ["７０％",70],
                    ["７５％",75],
                    ["８０％",80],
                    ["９０％",90],
                    ["１００％",100]
                  ],id:"attendnum"%>
              </div>

              <div class="lasttest-section">
                <h4><span>期末テスト</span></h4>
                <%= f.select :lasttest,[
                    ["０％",0],
                    ["５％",5],
                    ["１０％",10],
                    ["２０％",20],
                    ["２５％",25],

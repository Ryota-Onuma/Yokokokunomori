                    ["１００％",100]
                  ],id:"lasttestnum"%>
              </div>

              <div class="midtest-section">
                <h4><span>中間テスト</span></h4>
                <%= f.select :midtest,[
                    ["０％",0],
                    ["５％",5],
                    ["１０％",10],
                    ["２０％",20],
                    ["２５％",25],
                    ["３０％",30],
                    ["４０％",40],
                    ["５０％",50],
                    ["６０％",60],
                    ["７０％",70],
                    ["７５％",75],
                    ["８０％",80],
                    ["９０％",90],
                    ["１００％",100]
                  ],id:"midtestnum"%>
              </div>

              <div class="report-section">
                <h4><span>レポート</span></h4>
                <%= f.select :report,[
                    ["０％",0],
                    ["５％",5],
                    ["１０％",10],
                    ["２０％",20],
                    ["２５％",25],
                    ["３０％",30],
                    ["４０％",40],
                    ["５０％",50],
                    ["６０％",60],
                    ["７０％",70],
                    ["７５％",75],
                    ["８０％",80],
                    ["９０％",90],
                    ["１００％",100]
                  ],id:"reportnum"%>
              </div>

              <div class="inlesson-section">
                <h4><span>授業内課題</span></h4>
                <%= f.select :inlesson,[
                    ["０％",0],
                    ["５％",5],
                    ["１０％",10],
                    ["２０％",20],
                    ["２５％",25],
                    ["３０％",30],

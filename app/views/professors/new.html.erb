
<head>
    <%= stylesheet_link_tag "professors/professors_new", :media => "all" %>
</head>

<section id="post-prof">
  <div id="post-prof-mask">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-2 post-prof-container" >
      <h5>新規教員登録</h5>
      <%= form_for @professor do |f| %>
        <%= f.text_field :name, size:30, class:"prof-name",placeholder:"教員名" %>
        <%= f.select :department,[
          ["教員の所属を指定してください","#"],
          ["経済学部 : 経済学科","経済学部 : 経済学科"],
          ["経営学部 : 経営学科","経営学部 : 経営学科"],
          ["教育学部 : 学校教育課程","教育学部 ： 学校教育課程"],
          ["都市科学部 : 都市社会共生学科","都市科学部 : 都市社会共生学科"],
          ["都市科学部 : 建築学科","都市科学部 ： 建築学科"],
          ["都市科学部 : 都市基盤学科","都市科学部 ： 都市基盤学科"],
          ["都市科学部 : 環境リスク共生学科","都市科学部 : 環境リスク共生学科"],
          ["理工学部 : 機械・材料・海洋系学科 : 機械工学ＥＰ","理工学部 : 機械・材料・海洋系学科 : 機械工学ＥＰ"],
          ["理工学部 : 機械・材料・海洋系学科 : 材料工学ＥＰ","理工学部 : 機械・材料・海洋系学科 : 材料工学ＥＰ"],
          ["理工学部 : 機械・材料・海洋系学科 : 海洋空間のシステムデザインＥＰ","理工学部 : 機械・材料・海洋系学科 : 海洋空間のシステムデザインＥＰ"],
          ["理工学部 : 化学・生命系学科 : 化学EP","理工学部 : 化学・生命系学科 : 化学EP"],
          ["理工学部 : 化学・生命系学科 : 化学応用EP","理工学部 : 化学・生命系学科 : 化学応用EP"],
          ["理工学部 : 化学・生命系学科 : バイオEP","理工学部 : 化学・生命系学科 : バイオEP"],
          ["理工学部 : 数物・電子情報系学科 : 数理科学ＥＰ","理工学部 : 数物・電子情報系学科 : 数理科学ＥＰ"],
          ["理工学部 : 数物・電子情報系学科 : 物理工学ＥＰ","理工学部 : 数物・電子情報系学科 : 物理工学ＥＰ"],
          ["理工学部 : 数物・電子情報系学科 : 電子情報システムＥＰ","理工学部 : 数物・電子情報系学科 : 電子情報システムＥＰ"],
          ["理工学部 : 数物・電子情報系学科 : 情報工学ＥＰ","理工学部 : 数物・電子情報系学科 : 情報工学ＥＰ"],
          ["その他","その他"]
          ] ,class:"prof-department"%>
        <%= f.text_area :info, class:"prof-info",size:"65x10",placeholder:"教員の基本情報を記入してください。例:詳細な所属情報、研究分野。" %>
        <div id="prof-submit-container">
          <%= link_to "登録せずに教員一覧に戻る",professors_path, class: "prof-submit toProfindex" ,method: :get %>
          <%= f.submit "登録する",class:"prof-submit" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
 </div>
</section>

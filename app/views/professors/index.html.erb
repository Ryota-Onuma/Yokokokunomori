<head>
  <%= stylesheet_link_tag "professors/professors_new", :media => "all" %>
</head>

<section id="index-prof">
  <div id="index-prof-container">
    <div class="prof-search-parts">
      <div class="pankuzu">
        <a href = "/" style="margin-left:40px;">横国の森の入り口</a>
        <a href= "#" class="middle-pan">教員の木</a>
      </div>
    </div>

      <div >
        <h1 id="proftitle">教員一覧</h1>
      </div>
      <div class="addprofs">
        <div class="addprof-container">
          <button id="search-search"><i class="fas fa-search"></i>&ensp;　教員を探す　&ensp;</button>
          <%= link_to new_professor_path, class:"addprof",method: :get do %>
          <button><i class="fas fa-user-plus"></i>&emsp;教員を追加する</button>
          <% end %>
        </div>

      </div>


      <div class="prof-card-container">
      <% @search.each do |t| %>
       <%= link_to professor_path(t.id), method: :get do %>
        <div class="prof-card">
         <h2 style="border-bottom:1px solid rgba(183,170,0,1); padding-bottom: 5px;"><%= t.name %></h2>
         <%= t.department %>
         <p class="card-text"><%= t.info %></p>
        </div>
        <% end %>
      <% end %>

      </div>


  </div>
</section>
<section id="for-search-display">
  <div id="seach-display">
    <div id="search-prof">
      <h2><i class="fas fa-times fa-2x" id="closesearch"></i></h2>
      <h1> <span style="border-bottom:2px double rgba(183,170,0,1); padding-bottom:5px;">教員を探す</span></h1>
      <h2 style="margin-top:40px;"><a href="/professors"><i class="fas fa-address-book"></i>&ensp;全教員一覧を見る</a></h2>
        <div id="searchs-hidden">
            <h2 id="fromkeyword"><i class="far fa-hand-point-right"></i>&ensp;キーワードから探す</h2>
        </div>
        <ul id="hiddenprof-search">
          <div class="adjustprof">
             <%= form_tag('/professors', method: :get) do %>
               <%= text_field_tag :search, '',class: 'search-box',placeholder: "教員名か所属を入力してください。",size:40 %>
               <%= submit_tag '検索',:name => nil ,class: "search-button" %>
             <% end %>
          </div>
        </ul>
        <div class="accordion-for-profs">
          <h2 class="switchofsearchprof"><i class="far fa-hand-point-right"></i>&ensp;学部学科で探す</h2>
          <ul class="accordion-prof-container">
            <div style="width:100%;display:flex; flex-direction:row; justify-content:space-around;">
              <div>
            <li><h3 class="searchfrom"><span>経済学部</span></h3></li>
              <ul class="moreprofdepartment">
                <li><h5><a href="/professors?utf8=✓&search=経済学科"style="color:white;">&ensp;▶経済学科</a></h5></li>
              </ul>
              </div>
              <div>
            <li><h3 class="searchfrom"><span>経営学部</span></h3></li>
              <ul class="moreprofdepartment">
                <li><h5><a href="/professors?utf8=✓&search=経営学科"style="color:white;">&ensp;▶経営学科</a></h5></li>
              </ul>
              </div>
                <div>
            <li><h3 class="searchfrom"><span>教育学部</span></h3></li>
            <ul class="moreprofdepartment">
              <li><h5><a href="/professors?utf8=✓&search=教育学科"style="color:white;">&ensp;▶教育学科</a></h5></li>
            </ul>
              </div>
            </div>
            <div style="width:100%;display:flex; flex-direction:row; justify-content:flex-start;">
              <div style="width:40%; margin: 20px 0 0 30px;">
            <li><h3 class="searchfrom"><span>都市科学部</span></h3></li>
            <ul class="moreprofdepartment">
              <li><h5><a href="/professors?utf8=✓&search=都市社会共生学科"style="color:white">&ensp;▶都市社会共生学科</a></h5></li>
              <li><h5><a href="/professors?utf8=✓&search=建築学科"style="color:white">&ensp;▶建築学科</a></h5></li>
              <li><h5><a href="/professors?utf8=✓&search=都市基盤学科"style="color:white">&ensp;▶都市基盤学科</a></h5></li>
              <li><h5><a href="/professors?utf8=✓&search=環境リスク共生学科"style="color:white">&ensp;▶環境リスク共生学科</a></h5></li>
            </ul>
                </div>
            <div style="width:60%;margin:20px 0 0 -45px;"">
            <li><h3 class="searchfrom"><span>理工学部</span></h3></li>
            <ul class="moreprofdepartment">
              <li class="liprof"><h5><a href="/professors?utf8=✓&search=機械・材料・海洋系学科"style="color:white">&ensp;▶機械・材料・海洋系学科</a></h5></li>
                 <ul class="major-ul">
                   <li><h6><a href="/professors?utf8=✓&search=機械工学"style="color:white">&ensp;▶機械工学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=材料工学"style="color:white">&ensp;▶材料工学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=海洋空間のシステムデザイン"style="color:white">&ensp;▶海洋空間のシステムデザインEP</a></h6></li>
                 </ul>
              <li class="liprof"><h5><a href="/professors?utf8=✓&search=化学・生命系学科"style="color:white">&ensp;▶化学・生命系学科</a></h5></li>
                 <ul class="major-ul">
                   <li><h6><a href="/professors?utf8=✓&search=化学"style="color:white">&ensp;▶化学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=化学応用"style="color:white">&ensp;▶化学応用EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=バイオ"style="color:white">&ensp;▶バイオEP</a></h6></li>
                 </ul>
              <li class="liprof" style="margin-top:7px;"><h5><a href="/professors?utf8=✓&search=数物・電子情報系学科"style="color:white">&ensp;▶数物・電子情報系学科</a></h5></li>
                 <ul class="major-ul">
                   <li><h6><a href="/professors?utf8=✓&search=数理科学"style="color:white">&ensp;▶数理科学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=物理工学"style="color:white">&ensp;▶物理工学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=電子情報システム工学"style="color:white">&ensp;▶電子情報システム工学EP</a></h6></li>
                   <li><h6><a href="/professors?utf8=✓&search=情報工学"style="color:white">&ensp;▶情報工学EP</a></h6></li>
                 </ul>
            </ul>
              </div>
            </div>
          </ul>
        </div>
    </div>
   </div>

</section>

<script type="text/javascript">
  $(function(){
      $("#search-search").click(function(){
        $("#for-search-display").slideToggle(600);
      });
  });
  $(function(){
      $(".switchofsearchprof").click(function(){
        $(this).toggleClass("switchofsearchprof-click");
        $(".accordion-prof-container").slideToggle();
      });
  });

  $(function(){
    $(".accordion-prof-container li").click(function() {
      $(this).toggleClass("switchofsearchprof-click");
      $(this).next('ul').slideToggle();
  });
    });
$(function(){
      $("#moreprofdepartment li span").click(function() {
        $(this).next('ul').slideToggle();
    });
      });
$(function(){
      $("#closesearch").click(function(){
        $("#for-search-display").slideUp(600);
    });
      });
$(function(){
      $("#fromkeyword").click(function(){
        $(this).toggleClass("switchofsearchprof-click");
        $("#hiddenprof-search").slideToggle(400);
    });
      });
</script>
